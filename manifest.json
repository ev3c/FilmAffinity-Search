{
  "manifest_version": 3,
  "name": "FilmAffinity Search Extension",
  "version": "1.0",
  "description": "Una extensi√≥n de Chrome para buscar 'The Fisher King' en FilmAffinity",
  "icons": {
    "16": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon128.png",
      "48": "images/icon128.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  }
} 