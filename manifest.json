{
  "manifest_version": 3,
  "name": "FilmAffinity Search Extension",
  "version": "1.4",
  "description": "Una extensión para buscar películas, series, actores, directores, etc. en FilmAffinity",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  }
} 